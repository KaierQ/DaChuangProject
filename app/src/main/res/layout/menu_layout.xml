<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/report_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        >
    </WebView>

    <android.support.percent.PercentFrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
            <Button
                android:id="@+id/employee_crud"
                android:text="Button 1"
                android:layout_gravity="left|top"
                app:layout_widthPercent="33.3%"
                app:layout_heightPercent="50%"
                />
            <Button
                android:id="@+id/employee1_crud"
                android:text="Button 1"
                android:layout_gravity="center|top"
                app:layout_widthPercent="33.3%"
                app:layout_heightPercent="50%"
            />
            <Button
                android:id="@+id/employee_today"
                android:text="Button 2"
                android:layout_gravity="right|top"
                app:layout_widthPercent="33.3%"
                app:layout_heightPercent="50%"
                />
            <Button
                android:id="@+id/employee_one"
                android:text="Button 3"
                android:layout_gravity="left|bottom"
                app:layout_widthPercent="33.3%"
                app:layout_heightPercent="50%"
                />
            <Button
                android:id="@+id/employee1_notify"
                android:text="Button 4"
                android:layout_gravity="center|bottom"
                app:layout_widthPercent="33.3%"
                app:layout_heightPercent="50%"
                />
            <Button
            android:id="@+id/employee_notify"
            android:text="Button 4"
            android:layout_gravity="right|bottom"
            app:layout_widthPercent="33.3%"
            app:layout_heightPercent="50%"
            />
    </android.support.percent.PercentFrameLayout>

</LinearLayout>
